<view class='topvivo' wx:for="{{item}}">
  <view class='logo'></view>
  <view class='title'>{{item.title}}</view>
  <view class='tlright'>{{item.tiright}}</view>
  <view></view>
  <view class='wint'>
    <view class='pinleft'>
      <image class='shangpin' src="{{item.captcha}}"></image>
    </view>
    <view class="pinright">
      <text class='jie'>{{item.jianjie}}</text>
      <text class='can'>{{item.canshu}}</text>
      <text class='price'>{{item.price}}</text>
      <text class='num'>{{item.num}}</text>
    </view>
    <view class='bottext'>
      <text class='can'>{{item.number}}</text>
      <text>{{item.add}}</text>
    </view>
  </view>
  <view class='xian'>
    <view class='more'>{{item.more}}</view>
    <view bindtap='more' class='piao'>{{item.piao}}</view>
    <view class='wuliu'>{{item.wuliu}}</view>
    <view class='ping'>{{item.ping}}</view>
  </view>
</view>
